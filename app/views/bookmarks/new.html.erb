<div class="container my-5">
  <h1 class="text-center mb-4">Add Movie to <%= @list.name %></h1>

  <%= form_with model: [@list, @bookmark], local: true, class: 'needs-validation' do |form| %>
    <% if @bookmark.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@bookmark.errors.count, "error") %> prevented this bookmark from being saved:</h2>
        <ul>
          <% @bookmark.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :movie_id, "Choose a Movie", class: 'form-label' %>
      <%= form.collection_select :movie_id, @movies, :id, :title, prompt: "Select a Movie", class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= form.label :comment, class: 'form-label' %>
      <small class="text-muted">(Comment must be at least 6 characters long)</small>
      <%= form.text_area :comment, class: 'form-control', rows: 3 %>
    </div>

    <%= form.submit "Add Movie", class: "btn btn-primary" %>
  <% end %>

  <%= link_to 'Back to List', list_path(@list), class: 'btn btn-secondary mt-3' %>
</div>
