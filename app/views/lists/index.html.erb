<h1 class="lists-header">All Lists</h1>

<div class="lists-container">
  <% @lists.each do |list| %>
    <div class="list-card">
      <div class="list-card-image" style="background-image: url(<%= list.photo.attached? ? cl_image_path(list.photo.key, height: 300, crop: :fill) : image_path('https://via.placeholder.com/300x200') %>)">
        <%= link_to list_path(list), class: 'list-link' do %>
          <span class="list-card-title"><%= list.name %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New List", new_list_path, class: "btn btn-primary new-list-button" %>
