<h1>Create a New List</h1>

<%= form_with model: @list, class: "form-horizontal" do |form| %>
  <% if @list.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@list.errors.count, "error") %> prevented this list from being saved:</h2>
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "List Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter the list name" %>
  </div>

  <%= form.submit "Create List", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary mt-3" %>
